private Framebuffer framebuffer;
    private Shader shader;

    @Override
    public void onInitialize() {
        framebuffer = new Framebuffer(MinecraftClient.getInstance().getWindow().getWidth(), MinecraftClient.getInstance().getWindow().getHeight(), true);
        shader = new Shader("path/to/your/shader.glsl");
    }

    public void onRender() {
        MinecraftClient client = MinecraftClient.getInstance();
        framebuffer.bindFramebuffer(true);
        // Render the world here
        shader.bind();
        framebuffer.draw(0, 0, framebuffer.width, framebuffer.height);
        client.getFramebuffer().unbindFramebuffer();
    }



    #version 120
    uniform sampler2D texture;
    varying vec2 vTexCoord;

    void main() {
        vec4 color = texture2D(texture, vTexCoord);
        float gray = dot(color.rgb, vec3(0.299, 0.587, 0.114));
        gl_FragColor = vec4(gray, gray, gray, color.a);
    }
